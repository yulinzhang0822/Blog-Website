<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="blogTitle">Title</label>
    <input type="text" class="form-control" id="blogTitle" name="blogTitle" placeholder="Enter title" maxlength="100" size="100" autofocus>
    <small id="emailHelp" class="form-text text-muted">The maximum length of the title is 100 characters.</small>
  </div>

  <div class="form-group">
    <label for="blogContent">Content</label> <br>
    <textarea name="blogContent" id="blogContent" rows="5" cols="100" placeholder="Record your life..." maxlength="1000"></textarea> <br>
    <small id="emailHelp" class="form-text text-muted">The maximum length of the content is 1000 characters.</small>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
